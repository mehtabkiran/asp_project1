@model asp_project1.Models.ShopStaff

@{
    ViewData["Title"] = "addmember";
}

<h2>Register a New Staff member</h2>

@Html.AntiForgeryToken();
<center>
    <form asp-action="addmember">
        <div class="form-horizontal">
            <h4>Shop  Staff</h4>
            <hr />
