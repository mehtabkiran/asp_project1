@model asp_project1.Models.Category

@{
    ViewData["Title"] = "Add category";
}

<h2>Add category</h2>

@Html.AntiForgeryToken();
<center>
    <form asp-action="addcategory">
        <div class="form-horizontal">
            <h4>Category</h4>
            <hr />
            @if (ViewBag.Message != " " && ViewBag.Message != null)
            {
                <h1 class=" alert alert-success">
                    @ViewBag.Message
                </h1>

            }

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CategoryType" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="CategoryType" class="form-control" />
                    <span asp-validation-for="CategoryType" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
    </center>
    <div>
        <a href="viewallcategory">Back to List</a>
    </div>

